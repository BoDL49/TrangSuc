@model WebTrangSuc.Models.MauSac
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/QuanLy/Views/shared/_QuanLyLayout.cshtml";
}

<h2>Edit</h2>
<h2>Chỉnh sửa Màu Sắc</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.ID)
    <div class="form-group">
        @Html.LabelFor(model => model.TenMau)
        @Html.EditorFor(model => model.TenMau, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a href="@Url.Action("Index", "Color", new { area = "QuanLy" })" class="btn btn-secondary">Hủy</a>
}

