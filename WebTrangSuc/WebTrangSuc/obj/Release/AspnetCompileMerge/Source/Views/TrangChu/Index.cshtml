<script>
    async function getProducts() {
        const response = await fetch(`/api/sanpham`);
        const products = await response.json();

        const limitedProducts = products.slice(0, 8);

        const productList = document.querySelector('.list-product-best');

        const overlapClasses = ["overlap-12", "overlap-4", "overlap-5", "overlap-6", "overlap-7", "overlap-8", "overlap-9", "overlap-10"];

        limitedProducts.forEach((product, index) => {
            const overlapClass = overlapClasses[index % overlapClasses.length];

            const productHTML = `
                <div class="${overlapClass}" style="cursor: pointer;" onclick="redirectToProduct(${product.ID})">
                    <div class="text-wrapper-39">${product.TenThuongHieu}</div>
                    <div class="text-wrapper-40">${product.TenChatLieu}</div>
                    <p class="text-wrapper-41">${product.TenSanPham}</p>
                    <div class="group-8">
                        <div class="text-wrapper-42">Màu sắc: ${product.TenMau}</div>
                    </div>
                    <div class="group-9">
                        <div class="favorite-border"></div>
                        <div class="div-wrapper-2">
                            <div class="text-wrapper-43">${product.Gia.toLocaleString('vi-VN')}₫</div>
                        </div>
                    </div>
                    <div class="VNG" style="background-image: url('${product.HinhSanPham || '/img/default-image.svg'}');">
                        <div class="frame-2">
                            <div class="text-wrapper-44">${product.TenLoaiSanPham}</div>
                        </div>
                    </div>
                </div>
            `;
            productList.insertAdjacentHTML('beforeend', productHTML);
        });
    }

    function redirectToProduct(productId) {
        localStorage.setItem('selectedProductId', productId);

        window.location.href = `/chitietsanpham/`;
    }

    getProducts();

    document.querySelector('.overlap-11').addEventListener('click', () => {
        // Chuyển hướng tới trang /danhmucsanpham
        window.location.href = '/danhmucsanpham';
    });
</script>


