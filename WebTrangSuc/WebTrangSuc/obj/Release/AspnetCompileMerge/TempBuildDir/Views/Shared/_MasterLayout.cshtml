<script>
    const button = document.getElementById('userMenuButton');
    const menu = document.getElementById('userMenu');
    let isOpen = false;

    button.addEventListener('click', () => {
        isOpen = !isOpen;
        button.setAttribute('aria-expanded', isOpen);
        menu.classList.toggle('invisible');
        menu.classList.toggle('opacity-0');
        menu.classList.toggle('scale-95');
        menu.classList.toggle('opacity-100');
        menu.classList.toggle('scale-100');
    });

    document.addEventListener("DOMContentLoaded", function () {
        // Gọi hàm kiểm tra và hiển thị số lượng sản phẩm trong giỏ hàng
        updateCartQuantity();

        // Thiết lập hàm chạy mỗi 1 giây để cập nhật giỏ hàng
        setInterval(updateCartQuantity, 5000);

        const token = localStorage.getItem('token');
        const loginSection = document.getElementById('loginSection');
        const profileSection = document.getElementById('profileSection');
        const userNameElement = document.getElementById('userName');
        const userAvatarElement = document.getElementById('userAvatar');
        const logoutButton = document.getElementById('logoutButton');

        const avatarDefault = "/img/default-avatar.png";

        if (token) {
            fetchAccountInfo(token).then(data => {
                userNameElement.textContent = data.userName || "User";
                userAvatarElement.src = data.avatar || avatarDefault;
                loginSection.classList.add('hide');
                profileSection.classList.remove('hide');
            }).catch(error => {
                console.error("Error fetching user data:", error);
                loginSection.classList.remove('hide');
                profileSection.classList.add('hide');
            });
        } else {
            loginSection.classList.remove('hide');
            profileSection.classList.add('hide');
        }

        logoutButton.addEventListener('click', function (event) {
            event.preventDefault();
            logout();
        });

        const role = localStorage.getItem("role"); // Lấy role từ localStorage
        const manageLink = document.getElementById("manageLink");

        if (!role) {
            manageLink.style.display = "none"; // Ẩn nếu không có role
            return;
        }

        switch (parseInt(role)) {
            case 1:
                manageLink.href = "/admin/taikhoan/index";
                break;
            case 2:
                manageLink.href = "/quanly/taikhoan/index";
                break;
            case 3:
                manageLink.href = "/xulydonhang/order/index";
                break;
            case 4:
                manageLink.style.display = "none"; // Ẩn mục "Quản lý"
                break;
            default:
                manageLink.style.display = "none"; // Ẩn nếu role không hợp lệ
        }

        const searchInput = document.getElementById('searchInput');
        const searchButton = document.getElementById('searchButton');

        function redirectToSearchPage(query) {
            if (!query) return;
            // Chuyển hướng tới trang danh mục sản phẩm
            window.location.href = `/DanhMucSanPham?query=${encodeURIComponent(query)}`;
        }

        searchInput.addEventListener("keypress", function (event) {
            if (event.key === "Enter") {
                event.preventDefault();
                redirectToSearchPage(searchInput.value.trim());
            }
        });

        searchButton.addEventListener("click", function () {
            redirectToSearchPage(searchInput.value.trim());
        });

    });

    async function updateCartQuantity() {
        const userId = localStorage.getItem('userId'); // Lấy ID người dùng từ localStorage
        const cartQuantityElement = document.querySelector(".cart p");

        if (!userId) {
            cartQuantityElement.textContent = "0"; // Nếu không có người dùng, đặt số lượng là 0
            return;
        }

        try {
            const response = await fetch(`/api/cart/${userId}`, {
                method: "GET",
                headers: {
                    "Content-Type": "application/json"
                }
            });

            if (!response.ok) {
                throw new Error("Không thể lấy thông tin giỏ hàng");
            }

            const cartItems = await response.json();
            const totalQuantity = cartItems.reduce((sum, item) => sum + item.SoLuongSanPham, 0);

            // Hiển thị tổng số lượng sản phẩm trong giỏ hàng
            cartQuantityElement.textContent = totalQuantity || "0";
        } catch (error) {
            console.error("Lỗi khi cập nhật số lượng giỏ hàng:", error);
            cartQuantityElement.textContent = "0"; // Hiển thị 0 nếu có lỗi
        }
    }

    function GoToCart() {
        window.location.href = '/giohang';
    }

    async function fetchAccountInfo(token) {
        const userId = localStorage.getItem('userId');
        const response = await fetch(`/api/taikhoan/${userId}`, {
            method: 'GET',
            headers: {
                'Authorization': `Bearer ${token}`
            }
        });

        if (!response.ok) {
            throw new Error('Failed to fetch user data');
        }
        return response.json();
    }

    function logout() {
        localStorage.removeItem('token');
        localStorage.removeItem('userId');
        localStorage.removeItem('role');

        document.getElementById('loginSection').classList.remove('hide');
        document.getElementById('profileSection').classList.add('hide');

        window.location.href = '/Auth';
    }

</script>

