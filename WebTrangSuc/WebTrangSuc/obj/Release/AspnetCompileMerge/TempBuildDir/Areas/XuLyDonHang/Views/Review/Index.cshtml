
@using WebTrangSuc.Models
@using PagedList.Mvc;
@model PagedList.PagedList<DanhGia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/XuLyDonHang/Views/shared/_XuLyDonHangLayout.cshtml";
}

<style>
    .pagination {
        display: flex;
        justify-content: center;
        list-style: none;
        padding: 0;
        margin-top: 20px;
    }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li a,
            .pagination li span {
                padding: 8px 12px;
                text-decoration: none;
                color: #007bff;
                border: 1px solid #ddd;
                border-radius: 4px;
                transition: background-color 0.3s ease;
            }

                .pagination li a:hover,
                .pagination li span:hover {
                    background-color: #007bff;
                    color: white;
                }

            .pagination li.active span {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }

            .pagination li.disabled span {
                color: #6c757d;
                cursor: not-allowed;
                background-color: #e9ecef;
                border-color: #ddd;
            }
</style>

<h2>Đánh giá cho sản phẩm: @ViewBag.ProductName</h2>

<a href="@Url.Action("Create", "Review", new { productId = ViewBag.ProductId })" class="btn btn-primary">
    Thêm đánh giá mới
</a>

@if (Model.Count == 0)
{
    <p>Chưa có đánh giá nào cho sản phẩm này.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Xếp hạng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.IDSanPham</td>
                    <td>@review.Rate</td>
                    <td>
                        <a href="@Url.Action("Edit", "Review", new { id = review.ID })" class="btn btn-warning">
                            Sửa
                        </a>
                        <a href="@Url.Action("Delete", "Review", new { id = review.ID })" class="btn btn-danger"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa đánh giá này?');">
                            Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="@Url.Action("ProductList", "Review")" class="btn btn-secondary">Quay lại danh sách sản phẩm</a>

<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>

