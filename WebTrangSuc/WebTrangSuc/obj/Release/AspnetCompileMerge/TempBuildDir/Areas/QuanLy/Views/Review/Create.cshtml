
@model WebTrangSuc.Models.DanhGia
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/QuanLy/Views/shared/_QuanLyLayout.cshtml";
}


<h2>Thêm đánh giá cho sản phẩm: @ViewBag.ProductName</h2>

@using (Html.BeginForm("Create", "Review", FormMethod.Post))
{
    @Html.HiddenFor(model => model.IDSanPham, new { Value = ViewBag.ProductId })
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Rate">Xếp hạng:</label>
        @Html.TextBoxFor(model => model.Rate, new { @class = "form-control", type = "number", min = "1", max = "5" })
    </div>

    <button type="submit" class="btn btn-primary">Thêm</button>
    <a href="@Url.Action("Index", "Review", new { productId = ViewBag.ProductId })" class="btn btn-secondary">
        Hủy
    </a>
}


