@model IEnumerable<WebTrangSuc.Models.LoaiSanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Quản lý danh mục sản phẩm </h3>
        <nav aria-label="breadcrumb">

        </nav>
    </div>
    <p>
        <a href="@Url.Action("Create", "LoaiSanPham")" class="btn btn-primary">Create New</a>
    </p>

    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên loại</th>
                    <th>Hình loại</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    var i = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.TenLoaiSanPham</td>
                            <td>
                                <img src="@item.HinhLoaiSanPham" alt="Hình loại sản phẩm" style="max-width:100px; max-height:100px;" />
                            </td>
                            <td>
                                <a href="/admin/loaisanpham/edit/@item.ID" class="btn btn-sm btn-primary">Sửa</a>
                                <a href="/admin/loaisanpham/Delete/@item.ID" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có muốn xóa không?');">Xóa</a>

                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">Không có bản ghi nào</td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

