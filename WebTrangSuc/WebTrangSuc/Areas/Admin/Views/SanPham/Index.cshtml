@*@model IEnumerable<WebTrangSuc.Models.SanPham>*@

@using WebTrangSuc.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .pagination {
        display: flex;
        justify-content: center;
        list-style: none;
        padding: 0;
        margin-top: 20px;
    }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li a,
            .pagination li span {
                padding: 8px 12px;
                text-decoration: none;
                color: #007bff;
                border: 1px solid #ddd;
                border-radius: 4px;
                transition: background-color 0.3s ease;
            }

                .pagination li a:hover,
                .pagination li span:hover {
                    background-color: #007bff;
                    color: white;
                }

            .pagination li.active span {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }

            .pagination li.disabled span {
                color: #6c757d;
                cursor: not-allowed;
                background-color: #e9ecef;
                border-color: #ddd;
            }
</style>

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Quản lý sản phẩm </h3>
        <nav aria-label="breadcrumb">

        </nav>
    </div>
    <p>
        <a href="@Url.Action("Create", "SanPham")" class="btn btn-primary">Create New</a>
    </p>

    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên sản phẩm</th>
                    <th>Loại sản phẩm</th>
                    <th>Mô tả sản phẩm</th>
                    <th>Hình</th>
                    <th>Giá</th>
                    <th>Số lượng tồn</th>
                    <th>Trạng thái sản phẩm</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    var i = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.TenSanPham</td>
                            <td>@item.IDLoaiSanPham</td> <!-- Hiển thị tên loại sản phẩm -->
                            <td>@item.MoTaSanPham</td>
                            <td>
                                <img src="@item.HinhSanPham" alt="Hình sản phẩm" style="max-width:100px; max-height:100px;" />
                            </td>
                            <td>@item.Gia</td>
                            <td>@item.SoLuongTonKho</td>
                            <td>@item.TrangThaiSanPham</td>
                            <td>
                                <a href="/admin/sanpham/edit/@item.ID" class="btn btn-sm btn-primary">Sửa</a>
                                <a href="/admin/sanpham/Delete/@item.ID" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có muốn xóa không?');">Xóa</a>

                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">Không có bản ghi nào</td>
                    </tr>
                }
            </tbody>

        </table>

        <div>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </div>

    </div>
</div>

