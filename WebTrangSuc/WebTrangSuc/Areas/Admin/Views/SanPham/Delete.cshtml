@model WebTrangSuc.Models.SanPham
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h2>Xác nhận xóa danh mục</h2>
<div class="content-wrapper">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Bạn có chắc chắn muốn xóa danh mục này không?</h3>
        </div>
        <div class="card-body">
            <p><strong>Tên sản phẩm:</strong> @Model.TenSanPham</p>
            <p><strong>Loại sản phẩm:</strong> @Model.IDLoaiSanPham</p>
            <p><strong>Mô tả sản phẩm:</strong> @Model.MoTaSanPham</p>
            <p>
                <strong>Hình sản phẩm:</strong>
                <img src="@Model.HinhSanPham" alt="Ảnh loại sản phẩm" style="max-width: 200px;" />
            </p>
            <p><strong>Giá sản phẩm:</strong> @Model.Gia</p>
            <p><strong>Số lượng sản phẩm:</strong> @Model.SoLuongTonKho</p>
            <p><strong>Ngày tạo sản phẩm:</strong> @Model.NgayTaoSanPham</p>
            @using (Html.BeginForm("Delete", "SanPham", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ID)
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
            }
        </div>
    </div>
</div>


