@model WebTrangSuc.Models.SanPham
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h2>Xác nhận xóa danh mục</h2>
<div class="content-wrapper">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Bạn có chắc chắn muốn xóa không?</h3>
        </div>
        <div class="card-body">
            <p><strong>Tên sản phẩm:</strong> @Model.TenSanPham</p>
            <p><strong>Loại sản phẩm:</strong> @Model.IDLoaiSanPham</p>
            <p><strong>Mô tả sản phẩm:</strong> @Model.MoTaSanPham</p>
            <p>
                <strong>Hình sản phẩm:</strong>
                @Html.Label("Ảnh hiện tại:")
                <div>
                    @if (Model.HinhSanPhams != null && Model.HinhSanPhams.Any())
                    {
                        foreach (var hinh in Model.HinhSanPhams)
                        {
                            <img src="@Url.Content(hinh.HinhSP)" alt="Ảnh sản phẩm" style="width: 100%; max-width: 300px; max-height: 300px;" />
                        }
                    }
                    else
                    {
                        <span>Không có hình ảnh</span>
                    }
                </div>
            </p>
            <p><strong>Giá sản phẩm:</strong> @Model.Gia</p>
            <p><strong>Số lượng sản phẩm:</strong> @Model.SoLuongTonKho</p>
            <p><strong>Ngày tạo sản phẩm:</strong> @Model.NgayTaoSanPham</p>
            @using (Html.BeginForm("Delete", "SanPham", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ID)
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
            }
        </div>
    </div>
</div>


