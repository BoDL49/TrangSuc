<script>
    $(document).ready(function () {
        const userId = localStorage.getItem('userId'); // Lấy user ID từ localStorage


            const applyVoucherButton = document.getElementById("applyVoucherBtn");
            if (applyVoucherButton) {
                applyVoucherButton.addEventListener("click", applyVoucher);
            } else {
                console.error("Không tìm thấy nút áp dụng voucher bằng id.");
            }


            async function applyVoucher() {
                const voucherCode = document.querySelector("input[placeholder='Nhập mã voucher']").value.trim();

                if (!voucherCode) {
                    alert("Vui lòng nhập mã voucher.");
                    return;
                }

                try {
                    const response = await fetch("/api/cart/applyvoucher", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({
                            UserId: parseInt(userId),
                            VoucherCode: voucherCode
                        }),
                    });

                    if (!response.ok) {
                        const error = await response.json();
                        alert(error.Message || "Không thể áp dụng voucher.");
                        return;
                    }

                    const result = await response.json();
                    alert(result.Message);

                    document.querySelector(".text-wrapper-25").textContent = `${result.TotalPriceAfterDiscount.toLocaleString()} ₫`;
                } catch (error) {
                    console.error("Lỗi khi áp dụng voucher:", error);
                    alert("Có lỗi xảy ra. Vui lòng thử lại.");
                }
            }


        // Hàm tải giỏ hàng
        async function loadCart() {
            try {
                const response = await fetch(`/api/cart/${userId}`);
                const cartItems = await response.json();
                renderCart(cartItems);
            } catch (error) {
                console.error("Lỗi khi tải giỏ hàng:", error);
            }
        }

        // Hàm hiển thị giỏ hàng
        function renderCart(cartItems) {
            const cartContainer = document.querySelector(".hienthisp"); // Vị trí danh sách sản phẩm
            cartContainer.innerHTML = ""; // Xóa nội dung cũ

            let totalQuantity = 0; // Tổng số lượng sản phẩm
            let totalPrice = 0; // Tổng giá tiền

            if (cartItems.length > 0) {
                cartItems.forEach((item, index) => {
                    totalQuantity += item.SoLuongSanPham; // Tính tổng số lượng sản phẩm
                    totalPrice += item.Price * item.SoLuongSanPham; // Tính tổng tiền

                    const topValue = index * 220;

                    // HTML cho mỗi sản phẩm
                    const productHTML = `
                        <div class="overlap-3" style="top: ${topValue}px;">
                            <div class="overlap-41">
                             <img class="clear" src="/img/Cart/clear-1.svg" onclick="removeFromCart(${item.ID})" style="cursor: pointer"/>
                            <img class="line-3" src="/img/Cart/line-6.svg" />
                                <img class="rectangle-4" src="${item.Image}" alt="${item.ProductName}" />
                                <p class="text-wrapper-28">${item.ProductName}</p>
                            </div>

                            <div class="text-wrapper-32">Số lượng</div>
                            <div class="frame-3" style="margin-top: 5px;">
                                <div class="frame-4">
                                    <input class="text-wrapper-33" value="${item.SoLuongSanPham}" 
                                     onchange="updateCart(${item.ID}, this.value)" 
                                     type="number" min="1" />
                                </div>
                            </div>

                            <div class="text-wrapper-32" style="left: 450px;">Giá</div>
                            <div class="text-wrapper-32" style="left: 450px; padding-top:15px;">${(item.Price * item.SoLuongSanPham).toLocaleString()}₫</div>
                        </div>
                    `;

                    // Thêm sản phẩm vào container
                    cartContainer.insertAdjacentHTML("beforeend", productHTML);
                });

                // Cập nhật tổng giá tiền
                document.querySelector(".text-wrapper-25").innerText = `${totalPrice.toLocaleString()} ₫`;
                localStorage.setItem("totalPrice", totalPrice);

            } else {
                // Nếu giỏ hàng trống
                cartContainer.innerHTML = `
                    <p class="text-center" style="padding-top: 30px;">Giỏ hàng của bạn đang trống.</p>
                `;
                document.querySelector(".text-wrapper-25").innerText = "0 ₫";
            }

            // Hiển thị số lượng sản phẩm trong "Giỏ hàng"
            document.querySelector(".text-wrapper-34").innerText = `Giỏ hàng (${totalQuantity})`;
        }

        // Hàm thêm sản phẩm vào giỏ hàng
        async function themVaoGioHang(productId) {
            if (!userId) {
                alert('Vui lòng đăng nhập để thêm sản phẩm vào giỏ hàng.');
                return;
            }

            try {
                const response = await fetch(`/api/cart/add`, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        IDUser: parseInt(userId),
                        IDSanPham: parseInt(productId),
                        SoLuongSanPham: 1 // Mặc định thêm 1 sản phẩm
                    }),
                });

                if (!response.ok) {
                    const error = await response.json();
                    console.error('Lỗi API:', error);
                    throw new Error(error.Message || 'Không thể thêm sản phẩm vào giỏ hàng');
                }

                const result = await response.json();
                alert(result.Message || 'Thêm sản phẩm vào giỏ hàng thành công!');
                loadCart(); // Tải lại giỏ hàng
            } catch (error) {
                console.error('Lỗi khi thêm sản phẩm vào giỏ hàng:', error);
                alert('Không thể thêm sản phẩm vào giỏ hàng. Vui lòng thử lại.');
            }
        }

        // Hàm cập nhật số lượng sản phẩm
        async function updateCart(productId, newQuantity) {
            newQuantity = parseInt(newQuantity); // Chuyển đổi số lượng nhập vào thành số
            if (isNaN(newQuantity) || newQuantity <= 0) {
                alert('Số lượng phải lớn hơn 0.');
                return;
            }

            try {
                const response = await fetch(`/api/cart/update/${productId}`, {
                    method: "PUT",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ SoLuongSanPham: newQuantity })
                });

                if (!response.ok) {
                    const error = await response.json();
                    console.error('Lỗi API:', error);
                    throw new Error(error.Message || 'Không thể cập nhật giỏ hàng');
                }

                loadCart(); // Tải lại giỏ hàng sau khi cập nhật
            } catch (error) {
                console.error("Lỗi khi cập nhật số lượng:", error);
            }
        }


        // Hàm xóa sản phẩm khỏi giỏ hàng
        async function removeFromCart(productId) {
            try {
                const response = await fetch(`/api/cart/remove/${productId}`, { method: "DELETE" });

                if (!response.ok) {
                    const error = await response.json();
                    console.error('Lỗi API:', error);
                    throw new Error(error.Message || 'Không thể xóa sản phẩm khỏi giỏ hàng');
                }

                loadCart(); // Tải lại giỏ hàng sau khi xóa
            } catch (error) {
                console.error("Lỗi khi xóa sản phẩm:", error);
            }
        }

        // Hàm quay lại cửa hàng
        function BackToShop() {
            window.location.href = '/danhmucsanpham';
        }

        // Tải giỏ hàng khi trang được load
        loadCart();

        // Gắn hàm vào window để dùng được trong onclick
        window.themVaoGioHang = themVaoGioHang;
        window.updateCart = updateCart;
        window.removeFromCart = removeFromCart;
        window.BackToShop = BackToShop;

        document.querySelector(".text-wrapper-26").addEventListener("click", placeOrder);

        async function placeOrder() {
            const userId = localStorage.getItem("userId");
            if (!userId) {
                alert("Bạn cần đăng nhập để đặt hàng.");
                return;
            }

            // Giả sử giỏ hàng đã được tải ở một nơi khác
            const cartItems = await getCartItems(userId);

            if (!cartItems || cartItems.length === 0) {
                alert("Giỏ hàng trống.");
                return;
            }

            const totalAmount = localStorage.getItem("totalPrice");

            const orderData = {
                UserId: parseInt(userId),
                VoucherId: null, // Thêm voucher nếu có
                TotalAmount: totalAmount,
                PaymentMethod: "Thanh toán khi nhận hàng",
                CartItems: cartItems.map(item => ({
                    ProductId: item.IDSanPham,
                    Quantity: item.SoLuongSanPham,
                    Price: item.Price
                }))
            };

            try {
                const response = await fetch("/api/donhang/create", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(orderData)
                });

                if (!response.ok) {
                    const error = await response.json();
                    alert(error.Message || "Không thể đặt hàng.");
                    return;
                }

                const result = await response.json();
                alert(result.Message);
                // Chuyển hướng đến trang xác nhận đơn hàng
                window.location.href = `/donhang`;
            } catch (error) {
                console.error("Lỗi khi đặt hàng:", error);
                alert("Đã xảy ra lỗi. Vui lòng thử lại.");
            }
        }

        async function getCartItems(userId) {
            try {
                const response = await fetch(`/api/cart/${userId}`);
                if (!response.ok) throw new Error("Không thể tải giỏ hàng.");
                return await response.json();
            } catch (error) {
                console.error("Lỗi khi tải giỏ hàng:", error);
                return [];
            }
        }

    });
</script>


